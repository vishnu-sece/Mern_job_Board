{
  "info": {
    "name": "Job Board API",
    "description": "Complete API collection for MERN Job Board Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"candidate\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/api/jobs",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "jobs"]
            }
          }
        },
        {
          "name": "Get Job by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/api/jobs/JOB_ID_HERE",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "jobs", "JOB_ID_HERE"]
            }
          }
        },
        {
          "name": "Create Job (Employer)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer YOUR_JWT_TOKEN"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Frontend Developer\",\n  \"description\": \"We are looking for a skilled Frontend Developer to join our team...\",\n  \"skillsRequired\": [\"React\", \"JavaScript\", \"CSS\", \"HTML\"],\n  \"experience\": \"2-3 years\",\n  \"companyName\": \"Tech Corp\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/jobs",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "jobs"]
            }
          }
        }
      ]
    },
    {
      "name": "Applications",
      "item": [
        {
          "name": "Apply for Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer YOUR_JWT_TOKEN"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "John Doe",
                  "type": "text"
                },
                {
                  "key": "email",
                  "value": "john@example.com",
                  "type": "text"
                },
                {
                  "key": "phone",
                  "value": "+1234567890",
                  "type": "text"
                },
                {
                  "key": "skills",
                  "value": "React,JavaScript,CSS",
                  "type": "text"
                },
                {
                  "key": "resume",
                  "type": "file",
                  "src": "path/to/resume.pdf"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:5000/api/applications/apply/JOB_ID_HERE",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "applications", "apply", "JOB_ID_HERE"]
            }
          }
        },
        {
          "name": "Get My Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer YOUR_JWT_TOKEN"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/applications/my-applications",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "applications", "my-applications"]
            }
          }
        }
      ]
    }
  ]
}